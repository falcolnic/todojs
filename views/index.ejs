                <td>sah@gmail.com</td>
                <td>4342355</td>
                <td>
                  <a href="" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                  <a href="" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                </td>
              </tr>
            </tbody>
          </table>
        <% } else { %>
            <h1 class="text-center text-secondary mt-5">No users was foundd in db</h1>
        <% } %>
      </div>
    </div>
  </div>
</div>

